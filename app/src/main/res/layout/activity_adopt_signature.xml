<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard_in_progress">
    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adopt your Signature"
            android:textColor="@color/mdtp_white"
            android:fontFamily="@font/gothambold"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginRight="10sp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            tools:ignore="RtlHardcoded"
            app:tint="@color/mdtp_white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_button">
        <EditText
            android:id="@+id/email"
            style="@style/edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableTint="@color/colorPrimary"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_one"
            android:inputType="text"
            app:hintEnabled="false"></EditText>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/rdGroup">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:elevation="5dp">
                <RadioButton
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/singature_one"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Test Sign" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp">
                <RadioButton
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/signature_two"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Test" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:elevation="5dp">
                <RadioButton
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/signature_three"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:text="Ganesh More" />
            </androidx.cardview.widget.CardView>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_Saved_Sign_as_Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/muli_bold"
           android:background="@drawable/button_curve"
            android:textColor="@color/mdtp_white"
            android:textAlignment="center"
            android:text="Saved Sign as Default"/>
        <TextView
            android:id="@+id/tv_Adopt_New_Sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/muli_bold"
            android:background="@drawable/button_curve"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/mdtp_white"
            android:textAlignment="center"
            android:text="Adopt New Sign"/>
    </LinearLayout>
</RelativeLayout>